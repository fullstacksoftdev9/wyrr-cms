<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WYRR Web CMS - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    <link href="../Content/FileInput/fileinput.css" media="all" rel="stylesheet" type="text/css" />
    <link href="../Content/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="../Content/toastr.min.css" rel="stylesheet" type="text/css" />



    @RenderSection("Styles", false)


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <style>
        .head-logo {
            font-size: 20px;
            line-height: 50px;
            text-align: center;
            padding: 0 10px;
            font-weight: 500;
            height: 50px;
            color: white;
            margin-left: 33%;
        }
    </style>
</head>
<body class="skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header id="header" class="header">

        @*<a href='@Url.Action("Index", "Admin")' class="logo">
                <img src="../img/logo.png" alt="User Image" style="width:auto; max-width: 100%;height: auto;" />
                WYRR Web system
            </a>*@
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" style="margin-left: 0px !important;" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>

            <span class="head-logo">WYRR Web System</span>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu">


                    </li>
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        </a>
                    </li>
                    <li class="dropdown tasks-menu">

                    </li>
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            @if (Session["CurrentUser"] != null)
                            {
                                if (PENPALWebCMS.Utilities.PenpalSessionManager.UserLoginSession.UserName != null)
                                {
                                    <span>@PENPALWebCMS.Utilities.PenpalSessionManager.UserLoginSession.UserName  <i class="caret"></i></span>
                                }
                            }



                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-header bg-light-blue">
                                @*<img src="../img/loginImg.jpg" class="img-circle" alt="User Image" />*@
                                <img src="../img/user.png" class="img-circle" alt="User Image" />
                                @if (Session["CurrentUser"] != null)
                                {
                                    var RoleStatus = "-" + " " + "Admin";
                                    string @sName = PENPALWebCMS.Utilities.PenpalSessionManager.UserLoginSession.UserName + " " + @RoleStatus;
                                    <p>
                                        @sName
                                        <br />

                                    </p>
                                }

                            </li>
                            <li class="user-footer">
                                <div class="pull-left">
                                        @*<a href="#" class="btn btn-default btn-flat">Profile</a>*@
                                    <a href="@Url.Action("ChangePassword","CMSUser")" class="btn btn-default btn-flat">Change Password</a>
                                    </div>
                                <div class="pull-right">
                                    <a href="@Url.Action("Logout","Login")" class="btn btn-default btn-flat">Sign out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section id="menu" class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="text-center">
                        <img src="../img/logo1.png" class="img-rounded companyHeaderLogoImage" alt="User Image" style="width:auto; max-width: 100%;height: auto;" />
                    </div>
                </div>

                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">


                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>User Management</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-angle-double-right"></i> Users</a></li>
                            <li><a href="@Url.Action("Index", "StellarMasterAccount")"><i class="fa fa-angle-double-right"></i> Stellar Master User</a></li>
                            <li><a href="@Url.Action("Index", "CMSUser")"><i class="fa fa-angle-double-right"></i> CMS Users</a></li>
                        </ul>
                    </li>


                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Transaction</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">

                            <li><a href="@Url.Action("Index", "UserTransactionSetting")"><i class="fa fa-angle-double-right"></i>User Transaction Setting</a></li>
                            <li><a href="@Url.Action("Index", "TransactionConfiguration")"><i class="fa fa-angle-double-right"></i> Transaction Setting</a></li>
                            <li><a href="@Url.Action("Index", "Transaction")"><i class="fa fa-angle-double-right"></i> Transaction History</a></li>
                            <li><a href="@Url.Action("Index", "TransactionLog")"><i class="fa fa-angle-double-right"></i> Log Transaction History</a></li>



                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Report Management</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li>
                                <a href="@Url.Action("Index", "UserReport")"><i class="fa fa-angle-double-right"></i> User Analysis</a>
                            </li>

                            <li><a href="@Url.Action("Index", "TransactionReport")"><i class="fa fa-angle-double-right"></i> Transaction Analysis</a></li>

                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>News Feed</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li>
                                <a href="@Url.Action("Index", "FeedsApproval")"><i class="fa fa-angle-double-right"></i>Feeds Approval</a>
                            </li>

                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>User Manual</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" data-href="@Url.Action("DownloadUserManual", "UserManual")" onclick="return DownloadManual(this);"><i class="fa fa-angle-double-right"></i> Download</a></li>
                        </ul>
                    </li>



                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            @RenderSection("customscripts", required: false)
            @RenderBody()
        </aside><!-- /.right-side -->
    </div>



    <div class="modal fade" id="layout_popup" role="dialog" aria-hidden="true" style="z-index:10015 !important">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="layoutPartialContent" class="box box-solid box-primary" style="margin-bottom:0px;">

                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="logout_popup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="z-index:10015 !important">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div style="width:100%;height:100%;margin: 0px; padding:0px">
                        <div style="width:25%;margin: 0px; padding:0px;float:left;">
                            <i class="fa fa-warning" style="font-size: 140px;color:#da4f49"></i>
                        </div>
                        <div style="width:70%;margin: 0px; padding:0px;float:right;padding-top: 10px;padding-left: 3%;">
                            <h4>Your session is expired!</h4>
                            <p style="font-size: 15px;">You will be redirected to login page in <span id="timer" style="display: inline;font-size: 30px;font-style: bold">10</span> seconds. </p>
                            <p> Or click Sign In button</p>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div style="margin-left: 30%;margin-bottom: 20px;margin-top: 20px;">
                    <a href="@Url.Action("LogOut", "Login")" id="lnkLogin" class="btn btn-primary" aria-hidden="true">Sign in</a>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/bootstrap")
    <script src="../Scripts/bootbox.min.js"></script>
    <script src="../Scripts/plugins/timepicker/bootstrap-timepicker.js"></script>
    <script src="../Scripts/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="../Scripts/bootstrapValidator.js"></script>

    <script>
        var rootURL = '@Url.Content("../img/Preloader.gif")';
        var imgURL = '@Url.Content("../images/logos/")';
        var dashurl = '@Url.Content("../Dashboard/ChangeCompany/")';
    </script>
    <script src="../Scripts/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>

    <script src="../Scripts//plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script src="../Scripts/toastr.js" type="text/javascript"></script>

    @*<script src="../Scripts/jquery.validate.js"></script>
        <script src="../Scripts/jquery.validate.unobtrusive.js"></script>
        <script src="../Scripts/jquery.validate.unobtrusive.min.js"></script>*@




    <script src="../Scripts/AdminLTE/app.js" type="text/javascript"></script>
    <script src="../Scripts/AdminLTE/AjaxGlobalHandler.js" type="text/javascript"></script>

    <script src="../Scripts/FileInputJS/fileinput.js"></script>



    <script>
        function DownloadManual(obj) {
            debugger;
            var url = obj.getAttribute("data-href");

            $.ajax({
                url: url,
                type: "get",
                success: function (data) {
                    if (data == "") {
                        toastr.error("User Manual is not available");
                    }
                    else {
                        window.location.href = url;
                    }
                }
            });
        }
    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("Content", required: false)



</body>
</html>

@model PENPAL.VM.UserManagement.UserTransactionSettingModel

@if (Model != null)
{
    using (Ajax.BeginForm("ManageUserTransaction", "UserTransactionSetting", new { id = Model.Id },
                           new AjaxOptions { HttpMethod = "POST", OnSuccess = "UpdateSuccessful(data)", UpdateTargetId = "partialContent" },
                            new { @class = "form-horizontal", autocomplete = "off" }))
    {

        <div class="box box-solid box-primary" style="margin-bottom:0px;">
            <div class="box-header">
                @if (Model.Id > 0)
                {
                    <h3 class="box-title">
                        Edit User Transaction Setting
                    </h3>
                }

            </div>
            <div class="box-body" style="max-height:700px;overflow-y:auto;overflow-x:hidden">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(r => Model.Id)

                <div class="row">
                    <div class="col-xs-6">


                        <div class="row">
                            <label for="txtSubCompany" class="control-label col-xs-4">Username</label>
                            <div class="col-xs-8">

                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name", @readonly = "readonly" })
                                <p>
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <label for="txtSubCompany" class="control-label col-xs-4">Transaction Per Day</label>
                            <div class="col-xs-8">

                                @Html.TextBoxFor(m => m.TransactionPerDay, new { @class = "form-control", @maxlength = "4", @placeholder = "Transaction Per Day "})
                                <p>
                                    @Html.ValidationMessageFor(m => m.TransactionPerDay)
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <label for="txtSubCompany" class="control-label col-xs-4">Transaction Amount Per Day($) </label>
                            <div class="col-xs-8">

                                @Html.TextBoxFor(m => m.TransactionAmountPerDay, new { @class = "form-control", @maxlength = "5", @placeholder = "Transaction Amount Per Day "})
                                <p>
                                    @Html.ValidationMessageFor(m => m.TransactionAmountPerDay)
                                </p>
                            </div>
                        </div>



                    </div>



                </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-sm-12 text-right">
                       
                            <button type="submit" class="btn btn-primary">Save</button>
                        
                        <a class="btn btn-default" data-popup-close="popup" href="#" onclick="ClosePopup();">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    }




}

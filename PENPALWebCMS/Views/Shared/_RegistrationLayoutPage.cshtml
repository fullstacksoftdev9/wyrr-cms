@using System.Web.Mvc
@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WYRR Web System - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <style type="text/css">
        html, body, form {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #ffffff;
        }

        .login_body {
            /*background: url('Images/LoginPage/bottom-Black.gif') repeat scroll 0 0 #1B1B1B;*/
            color: #FFFFFF;
            font-size: 14px;
            margin: 0;
            font-family: Verdana,Helvetica,sans-serif;
        }

        .login_main_bg {
            left: 50%;
            margin: 0 0 0 -160px;
            position: absolute;
            font-weight: bold;
            text-shadow: 0 -1px 0 #050505;
            text-align: left;
            top: 0;
            z-index: 99;
        }

        .login_logo {
            padding-top: 140px;
            height: 120px;
            text-align: center;
        }

        .login_txtbox {
            background: none repeat scroll 0 0 #EBEBEB;
            border: 2px solid;
            border-color: #E0E0E0;
            border-radius: 4px 4px 4px 4px;
            color: #555555;
            font-size: 13px;
            padding: 8px;
            width: 300px;
            *margin: 0px 8px 8px 0px;
        }

        .login_lbl {
            color: #585858;
            font-family: Verdana,Helvetica,sans-serif;
            font-size: 11px;
            font-weight: bold;
        }

        .login_signin {
            width: 300px;
            background-color: #1667A8;
            border: 1px solid transparent;
            border-radius: 4px 4px 4px 4px;
            color: #FFFFFF;
            cursor: pointer;
            float: left;
            font-size: 14px;
            /*font-weight: bold;*/
            letter-spacing: 1px;
            padding: 6px 10px 6px 10px;
            *padding: 6px 0px 6px 0px;
            text-shadow: 0 -1px 0 #050505;
            margin-left: 45px;
        }

        .login_lblForgotPwd {
            color: #494949;
            font-family: Verdana,Helvetica,sans-serif;
            font-size: 13px;
            margin-left: 10px;
            font-weight: normal;
            height: 22px;
            text-decoration: none;
        }

        .login_chkbox {
            clear: left;
            display: block;
            float: left;
            padding: 0 5px 0 0;
            width: 19px;
            margin: 2px;
            *margin-top: 0px;
        }

        .login_remember {
            color: #494949;
            font-family: Verdana,Helvetica,sans-serif;
            font-size: 13px;
            font-weight: normal;
            height: 22px;
            margin-right: 10px;
        }

        .example {
            font-size: 12px;
        }

            .example input {
                height: 30px;
                font-size: 12px;
            }

        .btn-primary {
            background-color: #1667A8 !important;
            border: 1px solid transparent;
            border-radius: 4px 4px 4px 4px;
            color: #FFFFFF;
            cursor: pointer;
        }

        .form-box {
            width: 360px;
            margin: 90px auto 0 auto;
        }
    </style>
</head>
<body class="skin-blue">
    <div class="wrapper row-offcanvas row-offcanvas-left" style="height: 100%; position: relative;">
        <div class="row" style="height: 100%">
            <div class="col-md-6" style="height: 100%; max-height: 100%; min-height: 450px; padding: 50px; background-color:#D3D3D3; color: #837f80;">
                <div class="row pad">
                    <section class="col-md-10 text-center">
                        <img src="~/img/logo.png" />
                    </section>
                    <section class="col-md-10 text-left" style="color:#f03b44;">
                       

                    </section>
                    <section class="col-md-12" style="font-size: 14px; margin-top: 40px;">
                        <p></p>
                        <br>

                        <p>
                           
                            For any assistance regarding the <i>"WYRR"</i>, please feel free to contact:
                            <br>

                        </p>
                        <p>
                            Tel: 011 WYRR
                        </p>
                        <p>
                            Email: <a target="blank" style="color: blue; text-decoration: underline" href="mailto:mailaps@wyrr.com?subject=[WYRR]:%20Assistance%20Required">
                               WYRR Support
                            </a>
                        </p>
                        <p>
                            FAX: 011 44 (161) 999 8888

                        </p>


                        @{
                            <p>
                                Version: @System.Reflection.Assembly.GetAssembly(typeof(PENPALWebCMS.Controllers.Login.LoginController)).GetName().Version.ToString()
                            </p>
                        }

                    </section>
                </div>
            </div>
            <div id="wrapper" class="col-md-6" style="height: 100%; max-height: 100%; min-height: 450px;">
                <div class="text-center" style="margin-top: 45px;color:#f03b44;">
                    <h2 style="padding-top: 40px;margin-top:42px;font-size:27px;">Welcome to WYRR System</h2>
                    @*<img id="Image2" src="~/img/logo1.png" style="width:300px; height:auto;">*@
                </div>

                @RenderBody()

            </div>
            <div style="width: 100%; height: 50px; position: absolute; bottom: 0; right: 0;">
                <footer>
                    <div class="content-wrapper" style="padding:10px;">
                        <div>
                            <p style="text-align:right; margin-right:20px;">Copyright © @DateTime.Now.Year, WYRR, All rights reserved</p>

                        </div>

                    </div>
                </footer>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
